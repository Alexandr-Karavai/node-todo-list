<h2>Your tasks</h2>
<ul class="list-group">
    {{#each todos}}
    <li class="list-group-item">
        <form method="POST">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox">
                    </div>
                </div>
                <input type="text" class="form-control" readonly value="{{title}}">
                <input type="hidden" value="{{_id}}" name="id">
                <button type="submit" class="btn btn-primary ml-3" formaction="/completed">Save</button>
                <button type="submit" class="btn btn-danger ml-3" formaction="/remove">X</button>
            </div>
        </form>
    </li>
    {{/each}}
</ul>